# Database
# Preferred: Single connection string (recommended for IIS/iisnode)
# DATABASE_URL=postgres://user:password@host:5432/ecoboard

# Or explicit fields
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecoboard
DB_USER=postgres
DB_PASSWORD=your_password

# SSL options (set only if your DB requires SSL)
# DB_SSL=false
# DB_SSL_REJECT_UNAUTHORIZED=false

# LDAP Configuration
LDAP_URL=ldap://your-ldap-server:389
LDAP_BASE_DN=DC=example,DC=com
LDAP_DOMAIN=example.com

# vLLM API Configuration
VLLM_API_URL=http://localhost:8000/v1
VLLM_API_KEY=your_vllm_api_key
VLLM_MODEL_NAME=your_model_name

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Server
PORT=3000
# NOTE: When running behind IIS/iisnode, do NOT set PORT. iisnode provides a named pipe.
# For production deployments set NODE_ENV=production
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Database initialization behavior
# If true, the server will skip creating tables/migrations on startup and health will show "skipped"
# SKIP_DB_INIT=false
